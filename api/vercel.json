{
  "version": 2,
  "functions": {
    "api/summarize.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "rewrites": [
    { "source": "/summarize", "destination": "/api/summarize" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin",  "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Cache-Control",                "value": "no-store" }
      ]
    }
  ]
}
